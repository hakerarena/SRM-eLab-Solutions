#include<stdio.h>

int main(){

	int tc,T;
	scanf("%d",&T);
	for(tc=0;tc<T;tc++){
		int n,i;
		scanf("%d",&n);
		int L[n],R[n];
		for(i=0;i<n;i++){
			scanf("%d",&L[i]);
		}
		for(i=0;i<n;i++){
			scanf("%d",&R[i]);
		}

		int maxSum=0;
		int index,temp;
		for(i=0;i<n;i++){
			temp=L[i]*R[i];
			if(temp>maxSum){
				maxSum=temp;
				index=i;
			}
			else if(temp==maxSum){
				if(R[index]<R[i]){
					index=i;
				}
			}
		}
		printf("%d\n",index+1);
	}
	return 0;
}

